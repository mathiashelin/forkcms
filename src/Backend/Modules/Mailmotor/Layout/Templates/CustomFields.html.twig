{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">
      {% if showMailmotorAddCustomField %}
        {{ macro.buttonIcon(geturl('add_custom_field') ~ '&group_id=' ~ group.id, 'plus-square', 'lbl.AddCustomField'|trans|ucfirst) }}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <form action="{{ geturl('mass_custom_field_action') }}" method="get" class="forkForms submitWithLink" id="massCustomFieldAction">
        <input type="hidden" name="group_id" value="{{ group.id }}" />
        {{ dataGrid|raw }}
        </form>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoItems'|trans|ucfirst }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
