{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="email" class="control-label">{{ 'lbl.EmailAddress'|trans|ucfirst }}</label>
        {% form_field email %} {% form_field_error email %}
      </div>
      <div class="form-group">
        {% if groups %}
          {% if chkGroupsError %}
            <p class="text-danger">{% form_field_error groups %}</p>
          {% endif %}
          <ul class="list-unstyled">
            {% for group in groups %}
              <li class="checkbox">
                <label for="{{ group.id }}">{{ group.chkGroups|raw }} {{ group.label|ucfirst }}</label>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-plus-square"></span>{{ 'lbl.Add'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
