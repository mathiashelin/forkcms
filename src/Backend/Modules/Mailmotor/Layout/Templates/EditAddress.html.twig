{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="email" class="control-label">{{ 'lbl.EmailAddress'|trans|ucfirst }}</label>
        {% form_field email %} {% form_field_error email %}
      </div>
      <div class="form-group">
        {% if groups %}
          {% if chkGroupsError %}
            <p class="text-danger">{% form_field_error groups %}</p>
          {% endif %}
          <ul class="list-unstyled">
            {% for group in groups %}
              <li class="checkbox">
                <label for="{{ group.id }}">{{ group.chkGroups|raw }} {{ group.label|ucfirst }}</label>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
  {% if ddmSubscriptions %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              {{ 'lbl.CustomFields'|trans|ucfirst }}
            </h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label for="subscriptions" class="control-label">{{ 'lbl.Group'|trans|ucfirst }}</label>
              {% form_field subscriptions %} {% form_field_error subscriptions %}
            </div>
          </div>
          {% if fields %}
            <div class="panel-body">
              {% for field in fields %}
                <div class="form-group">
                  <label for="{{ field.name }}">[{{ field.label }}]</label>
                  {{ field.txtField }} {{ field.txtFieldError }}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="saveButton" type="submit" name="save" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>{{ 'lbl.Save'|trans|ucfirst }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
  <script type="text/javascript">
    //<![CDATA[
    var variables = [];
    variables['email'] = '{{ address.email }}';
    //]]>
  </script>
{% endblock %}
